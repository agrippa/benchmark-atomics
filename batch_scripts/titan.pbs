#!/bin/bash
#PBS -A csc205
#PBS -N max
#PBS -j oe
#PBS -m abe
#PBS -q batch
#PBS -l walltime=00:05:00
#PBS -l nodes=1
#PBS -l gres=atlas1%atlas2
#PBS -V

ulimit -c unlimited

# 2 sockets x 8-core CPUs

cd $PBS_O_WORKDIR

for EXE in $(ls bin/); do
    echo "$EXE:"

    echo "  Single Socket:"
    # Single socket
    aprun -n 1 -N 1 -cc none -d 8 ./bin/$EXE

    echo "  Dual Socket:"
    # Dual socket
    aprun -n 1 -N 1 -cc none -d 16 ./bin/$EXE
done
